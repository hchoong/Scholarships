<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>cse333.srs.service.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>cse333.srs.service.CreateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>cse333.srs.service.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScholarshipList</servlet-name>
        <servlet-class>cse333.srs.service.ScholarshipList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>cse333.srs.service.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScholarshipCreate</servlet-name>
        <servlet-class>cse333.srs.service.ScholarshipCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProfile</servlet-name>
        <servlet-class>cse333.srs.service.CreateProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Scholarship</servlet-name>
        <servlet-class>cse333.srs.service.Scholarship</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Apply</servlet-name>
        <servlet-class>cse333.srs.service.Apply</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScholarshipList</servlet-name>
        <url-pattern>/ScholarshipList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScholarshipCreate</servlet-name>
        <url-pattern>/ScholarshipCreate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProfile</servlet-name>
        <url-pattern>/CreateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Scholarship</servlet-name>
        <url-pattern>/Scholarship</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Apply</servlet-name>
        <url-pattern>/Apply</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>HibernateSessionFilter</filter-name>
        <filter-class>HibernateSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HibernateSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
